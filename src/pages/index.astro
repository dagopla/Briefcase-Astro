---
import About from "../sections/About.astro";
import Contact from "../sections/Contact.astro";
import Presentation from "../sections/Presentation.astro";
import Projects from "../sections/Projects.astro";
import Skills from "../sections/Skills.astro";
import Layout from "../layouts/Layout.astro";
import Menu from "../shared/Menu.astro";
---

<Layout title="Dagopla">
  <main id="container-first-present" class="relative overflow-x-hidden">
    <div class="rayados"></div>
    <div class="h-full relative md:pr-10 md:pl-20 z-30">
      <div class="z-10 flex justify-center items-center flex-col">
        <Menu />
        <Presentation />
        <div class="md:w-[600px] rounded-lg shadow-lg shadow-secondary z-20">
          <About />
          <Projects />
          <Skills />
          <Contact />
        </div>
      </div>
    </div>
  </main>
  <script
    async
    src="https://unpkg.com/es-module-shims@1.6.3/dist/es-module-shims.js"
  ></script>


  <script>
    let scrolly = 0;
    const container = document.getElementById("container-first-present");
    container!.addEventListener("mousemove", (e) => {
      const x = e.clientX - container!.offsetLeft;
      const y = e.clientY - container!.offsetTop;
      container!.style.background = `radial-gradient(circle at ${x}px ${
        scrolly + y
      }px, #878f9a -100%, hsl(var(--twc-accent)) 20%)`;
    });
    window.addEventListener("scroll", (e) => {
      scrolly = window.scrollY;
    });
  </script>
  <style>
    .circule {
      @apply w-32 h-16 rounded-full bg-blue-500 absolute top-10 left-10 opacity-0;
    }

    #container-first-present {
      background: radial-gradient(
        circle at 0px 0px,
        #878f9a -100%,
        hsl(var(--twc-accent)) 20%
      );
    }
    
  </style>
</Layout>
