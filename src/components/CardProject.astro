---
import Tags from "./Tags.astro";
const proyects = Astro.props;
const { name, url, tags, img, description } = proyects;
---

<div class="project text-primary">
  <h3 class="subtitle text-center">{name}</h3>
  <div class="w-full grid place-items-center">
    <div class="w-1/2">
      <a href={url} target="_blank">
        <img
          class="rounded-md shadow-md shadow-secondary"
          src={img}
          alt="Miniatura de la pÃ¡gina web"
        />
      </a>
      <div class="atropos-inner">
        <!-- put your custom content here -->
      </div>
    </div>
  </div>
  <br />
  <p class="text-center">{description}</p>
  <br />
  <div class="flex gap-2 justify-center">
    {tags.map((element: any) => <Tags name={element} />)}
  </div>
</div>
